# DEHN Multi-Language Document Processing Platform
# Copy this file to .env and customize for your environment

# ================================================
# DATABASE CONFIGURATION
# ================================================
# MongoDB Atlas connection string for metadata and processing status
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dehn?retryWrites=true&w=majority

# ================================================
# DUAL-BUCKET STORAGE CONFIGURATION  
# ================================================
# S3 Compatible Storage (MinIO for local, Google Cloud Storage for production)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=dehn-access-key
S3_SECRET_KEY=dehn-secret-key
S3_REGION=us-east-1

# Private Bucket - Original files, processing artifacts, admin-only access
S3_PRIVATE_BUCKET=dehn-private

# Public Bucket - Published multi-language content, CDN-ready
S3_PUBLIC_BUCKET=dehn-public

# Google Cloud Storage (for production)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_PRIVATE_BUCKET=dehn-private-prod
GOOGLE_CLOUD_PUBLIC_BUCKET=dehn-public-prod
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ================================================
# SERVICE CONFIGURATION
# ================================================
# PDF Processor
PDF_PROCESSOR_PORT=3095
PDF_PROCESSOR_URL=http://localhost:3095

# Admin Backend
ADMIN_BACKEND_PORT=3091
ADMIN_BACKEND_URL=http://localhost:3091

# User Backend  
USER_BACKEND_PORT=3090
USER_BACKEND_URL=http://localhost:3090

# ================================================
# SECURITY CONFIGURATION
# ================================================
# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# ================================================
# AI INTEGRATION CONFIGURATION
# ================================================
# Google Gemini AI for content analysis and translation
GOOGLE_AI_API_KEY=your-google-gemini-api-key

# OpenAI GPT for additional AI capabilities (optional)
OPENAI_API_KEY=your-openai-api-key

# AI Processing Settings
AI_MODEL_TEMPERATURE=0.7
AI_MAX_TOKENS=4096
AI_ENABLE_CONTENT_GROUPING=true
AI_ENABLE_TRANSLATION=true

# ================================================
# DOCUMENT PROCESSING WORKFLOW
# ================================================
# Processing Pipeline Settings
ENABLE_REALTIME_STATUS=true
PROCESSING_TIMEOUT_MINUTES=30
MAX_CONCURRENT_JOBS=3

# Content Grouping Settings
ENABLE_LAYOUT_ANALYSIS=true
ENABLE_LANGUAGE_DETECTION=true
MIN_TEXT_GROUP_SIZE=10

# Translation Settings
DEFAULT_SOURCE_LANGUAGE=en
SUPPORTED_LANGUAGES=en,tr,de,fr,es,it
ENABLE_CONTEXT_AWARE_TRANSLATION=true

# ================================================
# CORS CONFIGURATION
# ================================================
ADMIN_CORS_ORIGINS=http://localhost:8091
USER_CORS_ORIGINS=http://localhost:8090

# ================================================
# DEVELOPMENT CONFIGURATION
# ================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# ================================================
# FILE PROCESSING LIMITS
# ================================================
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf
MAX_CONCURRENT_UPLOADS=5

# ================================================
# PRODUCTION OVERRIDES
# ================================================
# When deploying to production, override these:
# NODE_ENV=production  
# DEBUG=false
# S3_ENDPOINT=https://storage.googleapis.com
