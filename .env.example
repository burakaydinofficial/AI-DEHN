# DEHN Hackathon Environment Configuration
# Copy this file to .env and customize for your environment

# ================================================
# DATABASE CONFIGURATION
# ================================================
# MongoDB Atlas connection string
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dehn?retryWrites=true&w=majority

# ================================================
# STORAGE CONFIGURATION  
# ================================================
# S3 Compatible Storage (MinIO for local, GCS for production)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=dehn-access-key
S3_SECRET_KEY=dehn-secret-key
S3_BUCKET_NAME=pdf-documents
S3_REGION=us-east-1

# Google Cloud Storage (for production)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_STORAGE_BUCKET=your-production-bucket

# ================================================
# SERVICE CONFIGURATION
# ================================================
# PDF Processor
PDF_PROCESSOR_PORT=8080
PDF_PROCESSOR_URL=http://localhost:8080

# Admin Backend
ADMIN_BACKEND_PORT=3001
ADMIN_BACKEND_URL=http://localhost:3001

# User Backend  
USER_BACKEND_PORT=3002
USER_BACKEND_URL=http://localhost:3002

# ================================================
# SECURITY CONFIGURATION
# ================================================
# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# API Keys (if using external AI services)
GOOGLE_AI_API_KEY=your-google-ai-api-key
OPENAI_API_KEY=your-openai-api-key

# ================================================
# CORS CONFIGURATION
# ================================================
ADMIN_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
USER_CORS_ORIGINS=http://localhost:5174,http://localhost:3000

# ================================================
# CACHING CONFIGURATION
# ================================================  
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================================
# DEVELOPMENT CONFIGURATION
# ================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# ================================================
# FILE PROCESSING LIMITS
# ================================================
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf
MAX_CONCURRENT_UPLOADS=5

# ================================================
# PRODUCTION OVERRIDES
# ================================================
# When deploying to production, override these:
# NODE_ENV=production  
# DEBUG=false
# S3_ENDPOINT=https://storage.googleapis.com
# REDIS_URL=your-production-redis-url
