# DEHN Document Processing Platform - Configuration
# Copy this file to .env and customize for your environment

# ================================================
# ENVIRONMENT
# ================================================
NODE_ENV=development
DEBUG=true

# ================================================
# SERVICES
# ================================================
# Backend API
PORT=3001
API_PREFIX=/api
BACKEND_URL=http://localhost:3001

# Frontend 
VITE_ADMIN_API_BASE=http://localhost:3001/api
VITE_USER_API_BASE=http://localhost:3001/api

# PDF Processor
PDF_PROCESSOR_URL=http://pdf-processor:3002

# ================================================
# DATABASE
# ================================================
MONGODB_URI=mongodb://mongodb:27017/dehn
DB_NAME=dehn

# ================================================
# STORAGE
# ================================================
STORAGE_ROOT=/app/storage

# ================================================
# SECURITY
# ================================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ================================================
# AI CONFIGURATION
# ================================================
GEMINI_API_KEY=your-google-gemini-api-key
AI_MODEL=gemini-2.5-flash
AI_TEMPERATURE=0.2
AI_MAX_OUTPUT_TOKENS=65536
AI_TOP_P=0.95
AI_TOP_K=40
