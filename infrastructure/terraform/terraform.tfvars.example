# terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

# REQUIRED: Your Google Cloud Project ID
# You can find this in the GCP Console or run: gcloud config get-value project
project_id = "your-gcp-project-id"

# OPTIONAL: The region where resources will be deployed
# Choose a region close to your users for better performance
# Popular options: us-central1, us-east1, europe-west1, asia-southeast1
region = "us-central1"

# OPTIONAL: The zone where resources will be deployed  
# Must be in the same region as above
zone = "us-central1-a"

# OPTIONAL: Environment (dev, staging, prod)
# This affects resource naming and configuration
environment = "dev"

# OPTIONAL: Custom domain name for the application
# Leave empty to use the default Cloud Run URLs
# Example: "myapp.example.com"
domain_name = ""

# OPTIONAL: Enable required Google Cloud APIs automatically
# Set to false if you want to enable APIs manually
enable_apis = true

# OPTIONAL: Storage class for document bucket
# STANDARD: Best for frequently accessed data
# NEARLINE: Best for data accessed less than once a month
# COLDLINE: Best for data accessed less than once a quarter
# ARCHIVE: Best for data accessed less than once a year
storage_class = "STANDARD"

# OPTIONAL: Maximum number of instances for Cloud Run services
# Higher values allow for better scaling but cost more
max_scale = 10

# OPTIONAL: Minimum number of instances for Cloud Run services
# 0 means scale to zero when not in use (cost-effective)
# Higher values reduce cold start time
min_scale = 0

# OPTIONAL: CPU limit for Cloud Run services
# Options: 1000m (1 CPU), 2000m (2 CPUs), 4000m (4 CPUs)
cpu_limit = "1000m"

# OPTIONAL: Memory limit for Cloud Run services
# Options: 128Mi, 256Mi, 512Mi, 1Gi, 2Gi, 4Gi, 8Gi
memory_limit = "512Mi"

# OPTIONAL: Allow public access to Cloud Run services
# Set to false for private services (requires authentication)
public_access = true
